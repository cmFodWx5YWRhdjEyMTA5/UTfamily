<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ManagementFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_management"
        android:layout_width="match_parent"
        android:layout_height="415dp">

        <!--中控區域底色-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="當前狀態"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_field"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end">

                    </android.support.v7.widget.AppCompatSpinner>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--溫度-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="溫度 (°C)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b11919" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--濕度-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="濕度 (%)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b11919" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--亮度-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="亮度 (%)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b11919" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_brightness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--管理裝置-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--控制背景顏色-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--上層-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <!--上左-->
                            <TextView
                                android:text="管理裝置"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingLeft="10dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!--上右-->
                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/spinner_situation"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end">

                            </android.support.v7.widget.AppCompatSpinner>

                        </LinearLayout>

                    </LinearLayout>

                    <!--下層-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--下左-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp">

                            <!--下左上-->
                            <RadioGroup
                                android:id="@+id/radioGroup_situation"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/radioBtn_comfortable_pointer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="選用舒適指標"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>

                                <RadioButton
                                    android:id="@+id/radioBtn_custom_setting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="客製設定"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>

                            </RadioGroup>

                        </LinearLayout>

                        <!--下右-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!--下右-->
                            <TextView
                                android:text="}二選一"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="10dp"
                                android:paddingStart="10dp"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--溫度-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="溫度 (°C)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b11919" />

                <ufoUI.AmountView
                    android:id="@+id/av_temperature"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:minValue="12"
                    app:maxValue="35" />

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--濕度-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="濕度 (%)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b11919" />

                <ufoUI.AmountView
                    android:id="@+id/av_humidity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:minValue="15"
                    app:maxValue="90" />

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--亮度-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="亮度 (%)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b11919" />

                <ufoUI.AmountView
                    android:id="@+id/av_brightness"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:minValue="1"
                    app:maxValue="80" />

            </LinearLayout>

            <View
                style="@style/ManageFunctionDivider_Red"
                />

            <!--休眠時間-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="休眠時間"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingLeft="10dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/spinner_dormancy"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end">

                            </android.support.v7.widget.AppCompatSpinner>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_start_control"
                        android:text="啟動"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_rounde"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>